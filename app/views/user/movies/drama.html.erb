<!--ドラマ映画一覧-->

    <div class="container">
        <div class="row mb-5">
            
            <div class="col-lg-1">
                
            </div>
            
            <div class="col-lg-10">
                <br>
                <h4 class="page-title">ドラマ映画</h4>
                <div class="movie-list row ">
                    <% @tmdb_movies.each do |movie| %>
                        <div class="col-lg-4 col-sm-6 col-xs-12 mt-3" style="border: 3px #ddd solid">
                            <div class="movie-title"><%=link_to movie['table']['title'],movie_path(movie['table']['id']) %></div>
                            <p style="margin: 10px;"> <%= movie['table']['release_date'] %>公開</p>
                            <p style="margin: 10px;"><img src="https://image.tmdb.org/t/p/w200/<%= movie['table']['poster_path'] %>" width~"300px;"></p>
                        </div>
                    <% end %>
                </div>
            </div> 
            
            <div class="col-lg-1">
               <span id="back">
                    <a href="">
                        <%= image_tag 'up.png', data: {"turbolinks"=>false}, class: "arrow" %>
                    </a>
                </span>
            </div>
            
        </div> 
    </div> 