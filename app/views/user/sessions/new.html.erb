<!--会員ログイン画面-->
    <div class="container">
        
        <div class="row">
            <div class="col-lg-4">
             
            </div>
            
            <div class="col-lg-7">
                <div class="mainnew">
                    <br>
                    <h4 class="mainnew-text">ログイン</h4>
                    <br>
                    <%= form_with model: @user, url: user_session_path do |f| %>
                    <div class="field">
                        <%= f.label :メールアドレス %>
                        <p> <%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
                    </div>
                    
                    <div class="field">
                        <%= f.label :パスワード %>
                        <p><%= f.password_field :password, autocomplete: "current-password" %></p>
                    </div>
                    
                    
                    
                    <div class="actions">
                        <%= f.submit "ログイン" %>
                    </div>
                    <% end %>
                    
                    <br>
                    <br>
                    <br>
                    会員登録を行ったことがない方はこちらから
                    <p>⇒<%=link_to "新規登録", new_user_registration_path%></p>
                    
                </div>
            </div> 
            
            <div class="col-lg-1">
                
            </div>
            
        </div> 
        
    </div> 