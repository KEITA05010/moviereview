<!--ログイン画面-->

    <div class="box">
        <div class="box-inner">
            <%= form_with model: @user, url: user_session_path do |f| %>
                <h4 class="mainlogin">ログイン</h4>
                <div class="box-email">
                    <%= f.label :email, "メールアドレス" %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>
                
                <div class="box-password">
                    <div class="a-row">
                        <div class="column-left">
                            <%= f.label :password, "パスワード" %>
                        </div>
                    </div>
                    <%= f.password_field :password, autocomplete: "current-password" %>
                </div>
                
                <div class="box-login">
                    <%= f.submit "ログイン" %>
                </div>
            <% end %>
            
            <div class="box-newusr">
                <p><span>-----</span> アカウントをお持ちでない方はこちらから <span>------</span></p>
                <%= link_to "新規登録する", new_user_registration_path %>
            </div>
        </div>
    </div>