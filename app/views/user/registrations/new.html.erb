<!--新規登録画面-->

   <div class="box2">
        <div class="box2-inner">
            <h4 class="mainnew">新規登録</h4>
            <%= form_with model: @user, url: user_registration_path do |f| %>
                <%= render "user/shared/error_messages", resource: resource %>
                
                <div class="box-username">
                <%= f.label :ユーザー名 %><br />
                <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
                </div>
                
                <div class="box2-email">
                <%= f.label :メールアドレス %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>
                
                <div class="box2-password">
                    <%= f.label :パスワード %>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> 文字以上)</em>
                    <% end %>
                    <%= f.password_field :password, autocomplete: "new-password" %>
                </div>
                
                <div class="box2-password">
                    <%= f.label :確認用パスワード %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                </div>
                
                <div class="box-login">
                    <%= f.submit "新規登録" %>
                </div>
                
            <% end %>
            
            <%=link_to "ログイン", new_user_session_path%>
        </div>
   </div>