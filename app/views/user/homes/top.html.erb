<!--会員トップページ-->

  <div class="container">
    <div class="row">
      <div class="col-lg-1">
        
      </div>
      <div class="col-lg-10">
        <%= flash[:notice] %>
        <br>
        <h3>上映中の映画一覧</h3>
        <div class="movie-list row ">
          
          <% @tmdb_movies['table']['results'].each do |movie| %>
            <div class="col-lg-4 col-sm-6 col-xs-12 mt-3" style="border:solid">
              <p style="margin: 10px;"> <%=link_to movie['table']['title'],movie_path(movie['table']['id']) %></p>
              <p style="margin: 10px;"> <%= movie['table']['release_date'] %>公開</p>
              <img src="https://image.tmdb.org/t/p/w200/<%= movie['table']['poster_path'] %>" width~"300px;" style="margin: 10px;">
            </div>
          <% end %>
        </div>
        
      </div> 
      <div class="col-lg-1">
        
      </div>
    </div> 
  </div> 
  