<!--ジャンル管理画面(一覧・追加を兼ねる)-->
<div class="container">
<div class="row">
<div class="col-lg-2">
  
</div>
<div class="col-lg-10">
<br>
<h2>作品ジャンル一覧・追加</h2>
<br>

     <%= form_with model: @genre ,url: admin_genres_path do |f| %>
      <th>ジャンル名</th>
      <th><%= f.text_field :name %></th>
      <th> <%= f.submit '新規登録'%> </th>
      <%end%>
<br>
<br>

<table class="table">
<thead>
   <tr> 
   <th>ジャンル</th>
   <th></th>   
   </tr>
</thead>

 <tbody>
     
     
      <%@genres.each do |genre| %>


        <tr>
            <td><%=genre.name%></td>
            <td><%=link_to "編集する",edit_admin_genre_path(genre) %></td>
        </tr>
        
  
    
   
  <%end%>
      
 </tbody>
 </table>
 


</body>
 </div> 
 </div> 
 </div> 