<!--映画編集-->
<div class="container">
<div class="row">
<div class="col-lg-2">
  
</div>
<div class="col-lg-10">
<br>
<h4>映画編集</h4>

<%= form_with model: @movie ,url: admin_movie_path(@movie) do |f| %>  

<p>映画画像
 <%= f.file_field :image, placeholder: "映画画像", accept: "image/*" %> </p>

<p>映画タイトル
<%= f.text_field :title %></p>
<p>公開日
<%= f.text_field :release_date %></p>
<p>説明文
 <%= f.text_area :introduction %></p>
<p>ジャンル
<%=f.collection_select :genre_id, Genre.all, :id, :name %></p>

 <%= f.submit "変更を保存" %></p>
 
 <%end%>
 
 </div> 
 </div> 
 </div> 